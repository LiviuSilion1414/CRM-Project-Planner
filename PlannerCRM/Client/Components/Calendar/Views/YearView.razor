<div class="calendar-year-grid text-center">
    @for (int i = 1; i <= 12; i++)
    {
        <div class="calendar-year-month mx-3 p-2 @GetMonthClass(i)" style="display: inline-block;">
            <h5>@(new DateTime(CurrentDate.Year, i, 1).ToString("MMMM", CultureInfo.InvariantCulture))</h5>
        </div>
    }
</div>

<style>
    .current-month {
        background-color: #4285f4;
        color: white;
        font-weight: bold;
    }
</style>

@code {
    [Parameter] public DateTime CurrentDate { get; set; }

    private string GetMonthClass(int month)
        => CurrentDate.Month == month ? "current-month" : string.Empty;
}

