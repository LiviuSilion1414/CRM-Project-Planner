@inject DialogService ds

<RadzenStack AlignItems="AlignItems.Start" Orientation="Orientation.Horizontal">
    <RadzenStack>
        <RadzenRow>
            <RadzenCard>
                <RadzenText Text="Client Information"></RadzenText>
                <RadzenText>Name: @SelectedActivity.WorkOrder.FirmClient.Name</RadzenText>
                <RadzenText>Vat Number: @SelectedActivity.WorkOrder.FirmClient.VatNumber</RadzenText>
            </RadzenCard>
            <RadzenCard>
                <RadzenText Text="Work Order Information"></RadzenText>
                <RadzenText>Name: @SelectedActivity.WorkOrder.Name</RadzenText>
                <RadzenText>Start Date: @SelectedActivity.WorkOrder.StartDate</RadzenText>
                <RadzenText>End Date: @SelectedActivity.WorkOrder.EndDate</RadzenText>
            </RadzenCard>
        </RadzenRow>
    </RadzenStack>
    <RadzenStack>
        <RadzenRow>
            <RadzenCard>
                <RadzenColumn>
                    <RadzenText TextStyle="TextStyle.H6">Name: @SelectedActivity.Name</RadzenText>
                    <RadzenText TextStyle="TextStyle.H6">Start Date: @SelectedActivity.StartDate</RadzenText>
                    <RadzenText TextStyle="TextStyle.H6">End Date: @SelectedActivity.EndDate</RadzenText>
                </RadzenColumn>
            </RadzenCard>
        </RadzenRow>
        <RadzenStack AlignItems="AlignItems.Start" Orientation="Orientation.Horizontal">
            <RadzenButton ButtonStyle="ButtonStyle.Info" Variant="Variant.Text" Text="Close" Click="(() => ds.Close())"></RadzenButton>
        </RadzenStack>
        <RadzenStack AlignItems="AlignItems.End" Orientation="Orientation.Horizontal">
            <RadzenButton ButtonType="ButtonType.Button" ButtonStyle="ButtonStyle.Danger" Variant="Variant.Outlined" Click="OnDelete"Text="Delete"></RadzenButton>
            <RadzenButton ButtonType="ButtonType.Button" ButtonStyle="ButtonStyle.Primary" Variant="Variant.Outlined" Click="OnEdit" Text="Edit"></RadzenButton>
        </RadzenStack>
    </RadzenStack>
</RadzenStack>

@code
{
    [Parameter] public ActivityDto SelectedActivity { get; set; }

    private async Task OnEdit()
    {
        await ds.OpenAsync<ActivityEditForm>("Edit Activity",
            new Dictionary<string, object>()
            {
                { nameof(ActivityEditForm.Model), SelectedActivity }
            },
            new DialogOptions() { Width="40vw;" }
        );
    }

    private async Task OnDelete()
    {
        await ds.OpenAsync<ActivityDeleteDialog>("Delete Activity",
            new Dictionary<string, object>()
                {
                { nameof(ActivityDeleteDialog.Model), SelectedActivity }
                },
            new DialogOptions() { Width = "40vw;" }
        );
    }
}
