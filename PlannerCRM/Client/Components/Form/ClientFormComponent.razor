<h3>FormComponent</h3>

<RadzenPanel>
    <EditForm EditContext="_context" OnValidSubmit="OnSubmit">
        <div class="form-group">
            <label>Name</label>
            <InputText @bind-Value="@Client.Name" />
        </div>
        <div class="form-group">
            <label>VAT Number</label>
            <InputText @bind-Value="@Client.VatNumber" />
            <RadzenButton ButtonType="ButtonType.Submit" ButtonStyle="ButtonStyle.Success" Text="Submit"/>
        </div>
    </EditForm>
</RadzenPanel>

@code {
    [Parameter] public FirmClientDto Client { get; set; }
    [Parameter] public EventCallback<FirmClientDto> UpdatedClient { get; set; }

    private EditContext _context;

    protected override void OnInitialized()
    {
        _context = new(Client);
    }

    private async Task OnSubmit()
    {
        await UpdatedClient.InvokeAsync(Client);
    }
}
