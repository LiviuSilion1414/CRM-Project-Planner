@inject DialogService ds
@inject FetchService<FirmClientDto> fs

<RadzenStack AlignItems="AlignItems.Center">
    <RadzenCard>
        <RadzenText Text="Do you confirm this item removal?" />
        <RadzenText>Name: @Model.Name</RadzenText>
        <RadzenText>Start Date: @Model.StartDate</RadzenText>
        <RadzenText>End Date: @Model.EndDate</RadzenText>
    </RadzenCard>
    <RadzenStack AlignItems="AlignItems.End" Orientation="Orientation.Horizontal">
        <RadzenButton ButtonType="ButtonType.Button"
                      ButtonStyle="ButtonStyle.Info"
                      Variant="Variant.Outlined"
                      Text="Close"
                      Click="@(() => ds.Close())">
        </RadzenButton>
        <RadzenButton ButtonType="ButtonType.Button"
                      ButtonStyle="ButtonStyle.Danger"
                      Variant="Variant.Outlined"
                      Text="Delete"
                      Click="@(async () => await OnDeleteConfirmed())">
        </RadzenButton>
    </RadzenStack>
</RadzenStack>

@code
{
    [Parameter] public WorkOrderDto Model { get; set; }

    private async Task OnDeleteConfirmed()
    {
        await fs.Delete(
            ControllersNames.WORK_ORDER,
            CrudApiManager.DELETE,
            Model.Id
        );
    }
}