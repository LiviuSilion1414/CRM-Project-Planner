@page "/operation-manager/add/workorder"

@using PlannerCRM.Shared.DTOs.Workorder.Forms
@using PlannerCRM.Shared.Models

@inject HttpClient httpClient
@inject NavigationManager navManager

@attribute [Authorize(Roles = nameof(Roles.OPERATION_MANAGER))]

<PageTitle>Operation Manager</PageTitle>

<div class="container-fluid">
    <h1>Aggiungi commessa</h1>
    <EditForm Model="@model" OnValidSubmit="OnClickConfirm">
        <DataAnnotationsValidator/>
        <div class="form-group">
            <label for="Nome commessa">Nome</label>
            <input type="text" class="form-control" @bind="model.Name" required/>
            <ValidationMessage For="@(() => model.Name)"/>
        </div>
        <div class="form-group">
            <label>Data d'inzio</label>
            <input type="date" class="form-control" @bind="@model.StartDate" required/> 
            <ValidationMessage For="@(() => model.StartDate)"/>
        </div>
        <div class="form-group">
            <label>Data fine</label>
            <input type="date" class="form-control" @bind="@model.FinishDate" required/>
            <ValidationMessage For="@(() => model.FinishDate)"/>
        </div>
        <div class="wrapper-btn">
            <div class="btn-cancel">
                <button type="button" class="btn btn-link" @onclick="OnClickCancel">Annulla</button>
            </div>
            <div class="btn-confirm">
                <button type="submit" class="btn btn-primary">Conferma</button>
            </div>
        </div>
    </EditForm>
</div>

@code {
    private WorkorderForm model = new();

    private void RedirectToPage() {
        navManager.NavigateTo("/operation-manager");
    }

    public async Task OnClickConfirm() {
        await httpClient.PostAsJsonAsync<WorkorderForm>("http://localhost:5032/workorder/add", model);
            
        RedirectToPage();
    }

    public void OnClickCancel() {
        RedirectToPage();
    }
}