@if (!_Activities.Any()) {
    <p><strong>Nessun'attività assegnata.</strong></p>
} else {
    <div class="master-detail">
        <div class="container-fluid">
            <h3>Attività</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>Data d'inizio</th>
                        <th>Data di fine</th>
                        <th>Dipendenti assegnati</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ac in _Activities) {
                        <tr>
                            <td><i class="bi bi-puzzle"></i></td>
                            <td>@ac.Name</td>
                            <td>@ac.StartDate</td>
                            <td>@ac.FinishDate</td>
                            <td>
                                @foreach (var ea in ac.EmployeeActivity) {
                                    <tr>
                                        <td>
                                            @ea.Employee.Email
                                        </td>
                                    </tr>
                                }
                            </td>
                            <td>
                                <button type="button" class="btn btn-primary" title="Modifica attività"
                                    @onclick="@(() => OnClickEdit(ac.Id))">
                                    <i class="bi bi-pencil-square"></i>
                                </button>                
                            </td> 
                            <td> 
                                <button type="button" class="btn btn-danger" title="Elimina attività"
                                    @onclick="@(() => OnClickDelete(ac.Id))">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
@if (_IsEditActivityClicked) { 
    <CascadingValue Value="@_ActivityId" Name="ActivityId">
        <CascadingValue Value="@WorkOrderId" Name="WorkOrderId">
            <OperationManagerEditActivity></OperationManagerEditActivity> 
        </CascadingValue>
    </CascadingValue>
}

@if (_IsDeleteActivityClicked) {
    <CascadingValue Value="@_ActivityId" Name="ActivityId">
        <CascadingValue Value="@WorkOrderId" Name="WorkOrderId">
            <OperationManagerDeleteActivity></OperationManagerDeleteActivity> 
        </CascadingValue>
    </CascadingValue>
}