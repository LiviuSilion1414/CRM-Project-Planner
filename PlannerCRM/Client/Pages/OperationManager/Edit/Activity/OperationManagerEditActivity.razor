@using PlannerCRM.Shared.Models

<PageTitle>CRM - Modifica attività</PageTitle>

<div class="modal" tabindex="-1" role="dialog"
    style="display: block; background-color: rgba(0, 0, 0, 0.4); backdrop-filter: blur(15px);
        width: 100%; height: 100%;"
    hidden="@_IsCancelClicked">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Modifica attivita</h5>
            <i style="cursor: pointer;" class="bi bi-x-circle" @onclick="@(() => OnClickModalCancel())"></i>
        </div>
        <div style="width: 100%; height:100%;padding: 10px;">
        <EditForm EditContext="@_EditContext" OnValidSubmit="OnClickModalConfirm">
            <DataAnnotationsValidator />
            <div class="form-group">
                <div class="child">
                    <div class="child">
                        <div class="form-group">
                            <span class="oi oi-briefcase"></span>
                            <label for="Nome commessa">Commessa</label>
                                <InputText class="form-control" @bind-Value="@_CurrentWorkOrder.Name" Disabled="@true"/>
                        </div>
                    </div>
                    <ValidationMessage For="@(() => _Model.WorkOrderId)" />
                </div>
            </div>
            <div class="form-group">
                <span class="oi oi-text"></span>
                <label for="Nome attività">Nome</label>
                <InputText class="form-control" @bind-Value="_Model.Name"/>
                <ValidationMessage For="@(() => _Model.Name)" />
            </div>
            <div>
                <div class="form-group" style="display: inline-block;">
                    <span class="oi oi-calendar"></span>
                    <label for="Data d'inizio">Data d'inizio</label>
                    <InputDate class="form-control" @bind-Value="@_Model.StartDate"/>
                    <ValidationMessage For="@(() => _Model.StartDate)" />
                </div>
                <div class="form-group" style="display: inline-block;">
                    <span class="oi oi-calendar"></span>
                    <label for="Data di fine">Data di fine</label>
                    <InputDate class="form-control" @bind-Value="@_Model.FinishDate"/>
                    <ValidationMessage For="@(() => _Model.FinishDate)" />
                </div>
            </div>
            <div class="container">
                <div class="child" style="float: left">
                    <span class="oi oi-people"></span>
                    <label for="Assegna dipendenti">Assegna a dipendenti</label>
                    <InputText Type="search" class="form-control" @bind-Value="_SelectModel.SelectedEmployee" />
                    @if (_Employees.Any()) {
                        <ul style="height: min-content; overflow-y: scroll;">
                            @if (!_HasElements) {
                                <li style="cursor: pointer;" @onclick="@(() => Toggle())">@_Message</li>
                            } else {
                                @foreach (var em in _Employees) {
                                    <li style="cursor: pointer;" class="dropdown-item" value="@em" 
                                        @onclick="@(() => OnClickAddAsSelected(em))"> 
                                            @em.Email
                                    </li>
                                }
                            }
                        </ul>
                    }
                </div>
                <div class="child" style="padding-top: 15px;">
                    <button type="button" class="btn btn-link"
                        @onclick="@(() => OnClickSearchEmployee(_SelectModel.SelectedEmployee))">
                        <span class="oi oi-magnifying-glass"></span>
                        Cerca
                    </button>
                </div>
                <div class="child" style="float: right;">
                    <span>Dipendenti selezionati per questa attività: @_Model.ViewEmployeeActivity.Count</span> <br>
                    <div style="overflow-y: scroll;">
                        <table class="table">
                            <thead>
                                <th>Email</th>
                            <th></th>
                            </thead>
                            <tbody>
                                <div>
                                    @if (_Model.ViewEmployeeActivity.Any()) {
                                        @foreach (var ea in _Model.ViewEmployeeActivity) {
                                            <tr>
                                                <td> 
                                                    <span class="oi oi-envelope-closed"></span>
                                                    <span> @ea.Employee.Email </span>
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-danger" value="@ea.Employee"
                                                        @onclick="(() => OnClickRemoveAsSelected(ea.Employee))">Elimina</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </div>
                            </tbody>
                        </table>
                        <br>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="justify-content: space-between; padding: 10px 0; width: 100%;">
                <div style="float: left;">
                    <button type="button" id="btn-link" class="btn btn-link" style="text-decoration: none;"
                        @onclick="@(() => OnClickModalCancel())">Annulla</button>
                </div>
                <div style="float: right;">
                    <button type="submit" class="btn btn-primary">Conferma</button>
                </div>
            </div>
            <NavigationLock ConfirmExternalNavigation="@NavLockService.ConfirmedExternalExit" 
                OnBeforeInternalNavigation="@NavLockService.ConfirmInternalExit"/>
        </EditForm>
        </div>
        </div>
    </div>
</div>

@if (_IsError) {
    <Feedback Severity="@FatalityType.DANGER" Message="@_Message"></Feedback> 
}