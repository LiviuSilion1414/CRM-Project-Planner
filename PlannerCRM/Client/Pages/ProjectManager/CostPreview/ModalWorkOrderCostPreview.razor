<div class="modal" tabindex="-1" role="dialog" hidden=@_isCancelClicked>
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">@Title</h5>
            <i id="x-cancel" class="bi bi-x-circle" @onclick=@OnClickModalCancel></i>
        </div>
            <div class="text-center">
                <strong>Dati cliente</strong>
            </div>
            <div class="container">
                <div class="text-left">
                    <label>Cliente</label>
                    <input type="text" class="form-control" @bind=@_client.Name disabled=@_isDisabled readonly=@_isDisabled/>
                </div>
                <div class="text-right">
                    <label>Partitva IVA</label>
                    <input type="text" class="form-control" @bind=@_client.VatNumber disabled=@_isDisabled readonly=@_isDisabled/>
                </div>
            </div>
            <div class="text-center">
                <strong>Dati commessa</strong>
            </div>
            <div class="container-fluid">
                <div class="container">
                    <div class="text-left">
                        <label>Nome</label>
                        <input type="text" class="form-control" @bind=@_invoice.Name disabled=@_isDisabled readonly=@_isDisabled/>
                    </div>
                    <div class="text-left">
                        <label>Attività</label>
                        <input type="text" class="form-control" @bind=@_invoice.TotalActivities disabled=@_isDisabled readonly=@_isDisabled/>
                    </div>
                    <div class="text-right">
                        <label>Dipendenti</label>
                        <input type="text" class="form-control" @bind=@_invoice.TotalEmployees disabled=@_isDisabled readonly=@_isDisabled/>
                    </div>
                </div>
                <div class="container">
                    <div class="text-right">
                        <label>Data inizio</label>
                        <input type="text" class="form-control" @bind=@_invoice.StartDate disabled=@_isDisabled readonly=@_isDisabled/>
                    </div>
                    <div class="text-right">
                        <label>Data fine</label>
                        <input type="text" class="form-control" @bind=@_invoice.TotalActivities disabled=@_isDisabled readonly=@_isDisabled/>
                    </div>
                    <div class="text-right">
                        <label>Durata in giorni</label>
                        <input type="text" class="form-control" @bind=@_invoice.TotalTime disabled=@_isDisabled readonly=@_isDisabled/>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <strong>Attività</strong>
            </div>
            <div class="text-center">
                <table class="table table-striped">
                    <tr>
                        <th scope="col">Nome</th>
                        <th scope="col">Data inizio</th>
                        <th scope="col">Data fine</th>
                        <th scope="col">Costo medio mensile</th>
                        <th scope="col">Costo totale attività</th>
                    </tr>
                    <tbody>
                        <tr>
                            <td>Lorem ipsum</td>
                            <td>Lorem ipsum</td>
                            <td>Lorem ipsum</td>
                            <td>Lorem ipsum</td>
                            <td>Lorem ipsum</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="text-right">
                <strong>Totale: 5000$</strong> 
            </div>
        <div class="modal-footer">
            <div id="cancel">
                <span id="btn-link" class="btn btn-link" @onclick=@OnClickModalCancel>Anulla</span>
            </div>
            <div id="confirm">
                <button type="submit" class="btn btn-primary">Conferma</button>
            </div>
        </div>
        </div>
    </div>
</div>