@page "/account-manager"

@using PlannerCRM.Shared.Models

<PageTitle>CRM - Account Manager</PageTitle>

@if (_IsError) {
    <Feedback Severity="@BannerType.DANGER" Message="@_Message"></Feedback>
}

<div class="parent">
    <button type="button" class="btn btn-primary" @onclick="OnClickAddUser">
        <span class="oi oi-plus"></span>
        Aggiungi utente
    </button>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Email</th>
            <th scope="col">Nome</th>
            <th scope="col">Data di nascita</th>
            <th scope="col">Data d'inizio</th>
            <th scope="col">Ruolo</th>
            <th scope="col">Tariffa oraria</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in _users) {
            <tr>
                <td>
                    <span class="oi oi-person"></span>
                    @user.Email
                </td>
                <td>@user.FullName</td>
                <td>@user.BirthDay.ToShortDateString()</td>
                <td>@user.StartDate.ToShortDateString()</td>
                <td>@user.Role</td>
                <td>@user.HourlyRate</td>
                <td>
                    <button type="button" class="btn btn-primary" @onclick="@(() => OnClickEdit(user.Id))">
                        <span class="oi oi-pencil"></span>
                    </button>                
                </td> 
                <td> 
                    <button type="button" class="btn btn-danger" @onclick="@(() => OnClickDelete(user.Id))">
                        <span class="oi oi-trash"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>