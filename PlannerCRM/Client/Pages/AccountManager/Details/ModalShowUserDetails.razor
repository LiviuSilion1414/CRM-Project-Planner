<Modal Size="@ModalSize.EXTRA_LARGE" Title="@Title">
    <Body>
        <EditForm Model="@_model" OnValidSubmit="@OnClickModalCancel">
            <div class="form-group text-centerÃ§">
                <label>Immagine di profilo</label>
                <br/>
                <img src="@_model.ProfilePicture.Thumbnail" width="150" height="150" class="rounded-circle"/>
            </div>
            <div class="form-group">
                <i class="bi bi-person-circle"></i>
                <label for="Nome">Nome</label>
                <InputText class="form-control" @bind-Value="_model.FirstName" disabled="@_isDisabled" readonly="@_isDisabled" />
            </div>
            <div class="form-group">
                <i class="bi bi-person-circle"></i>
                <label for="Cognome">Cognome</label>
                <InputText class="form-control" @bind-Value="_model.LastName" disabled="@_isDisabled" readonly="@_isDisabled"/>
            </div>
            <div class="form-group">
                <i class="bi bi-envelope-at-fill"></i>
                <label for="Email">Email</label>
                <InputText type="email" class="form-control" @bind-Value="_model.Email" disabled="@_isDisabled" readonly="@_isDisabled"/>
            </div>
            <div class="form-group">
                <i class="bi bi-calendar3"></i>
                <label for="Data di nascita">Data di nascita</label>
                <InputDate class="form-control" @bind-Value="_model.BirthDay" disabled="@_isDisabled" readonly="@_isDisabled"/>
            </div>
            <div class="form-group">
                <i class="bi bi-calendar3"></i>
                <label for="Data d'inizio">Data d'inizio</label>
                <InputDate class="form-control" @bind-Value="@_model.StartDate" disabled="@_isDisabled" readonly="@_isDisabled"/>
            </div>
            <div class="form-group">
                <i class="bi bi-briefcase"></i>
                <label for="Codice fiscale">Codice fiscale</label>
                <InputText class="form-control" @bind-Value="_model.NumericCode" disabled="@_isDisabled" readonly="@_isDisabled"/>
            </div>
            <div class="form-group">
                <i class="bi bi-star-fill"></i>
                <label for="Ruolo">Ruolo</label>
                <input type="text" class="form-control" @bind="_model.Role" disabled="@_isDisabled" readonly="@_isDisabled"/>
            </div>
            <div class="form-group">
                <i class="bi bi-euro"></i>
                <label for="Tariffa oraria">Tariffa oraria</label>
                <InputNumber Step="0.01" class="form-control" @bind-Value="_model.CurrentHourlyRate" disabled="@_isDisabled" readonly="@_isDisabled"/>
                <div class="form-group">
                    <label> <i class="bi bi-calendar3"></i> Da</label>
                    <InputDate class="form-control" @bind-Value="_model.StartDateHourlyRate" disabled="@_isDisabled" readonly="@_isDisabled"/>
                </div>
                <div class="form-group">
                    <label> <i class="bi bi-calendar3"></i> A</label>
                    <InputDate class="form-control" @bind-Value="_model.FinishDateHourlyRate" disabled="@_isDisabled" readonly="@_isDisabled"/>
                </div>
            </div>
            <div class="form-group">
                <div class="password-wrapper">
                    <i class="bi bi-key-fill"></i>
                    <label for="Password">Password</label>
                    <InputText type="@_input" class="form-control" @bind-Value="_model.Password" autocomplete="new-password" disabled="@_isDisabled" readonly="@_isDisabled"/>
                    <SwitchInputType Switch="@SwitchPassword"/>
                </div>
            </div>
        </EditForm>
    </Body>
</Modal>