@using PlannerCRM.Shared.Models

<PageTitle>CRM - Dettagli utente</PageTitle>

<div class="modal" tabindex="-1" role="dialog"
    style="display: block; background-color: rgba(0, 0, 0, 0.4); backdrop-filter: blur(15px);
        width: 100%; height: 100%;"
    hidden="@_IsCancelClicked">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Aggiungi attivita</h5>
            <i style="cursor: pointer;" class="bi bi-x-circle" @onclick="@(() => OnClickModalCancel())"></i>
        </div>
        <div style="width: 100%; height:100%;padding: 10px;">
        <EditForm Model="@_Model" OnSubmit="OnClickModalCancel">
            <DataAnnotationsValidator />
            <div class="form-group">
                <span class="oi oi-person"></span>
                <label for="Nome">Nome</label>
                <InputText class="form-control" @bind-Value="_Model.FirstName"/>
            </div>
                <ValidationMessage For="@(() => _Model.FirstName)"/>
            <div class="form-group">
                <span class="oi oi-person"></span>
                <label for="Cognome">Cognome</label>
                <InputText class="form-control" @bind-Value="_Model.LastName"/>
                <ValidationMessage For="@(() => _Model.LastName)"/>
            </div>
            <div class="form-group">
                <span class="oi oi-envelope-closed"></span>
                <label for="Email">Email</label>
                <InputText Type="email" class="form-control" @bind-Value="_Model.Email"/>
                <ValidationMessage For="@(() => _Model.Email)" />
            </div>
            <div>
                <div class="form-group" style="display: inline-block; padding-right: 15px;">
                    <span class="oi oi-calendar"></span>
                    <label for="Data di nascita">Data di nascita</label>
                    <InputDate class="form-control" @bind-Value="_Model.BirthDay"/>
                    <ValidationMessage For="@(() => _Model.BirthDay)" />
                </div>
                <div class="form-group" style="display: inline-block;">
                    <span class="oi oi-calendar"></span>
                    <label for="Data d'inizio">Data d'inizio</label>
                    <InputDate class="form-control" @bind-Value="@_Model.StartDate"/>
                    <ValidationMessage For="@(() => _Model.StartDate)" />
                </div>
            </div>
            <div class="form-group">
                <span class="oi oi-briefcase"></span>
                <label for="Codice fiscale">Codice fiscale</label>
                <InputText class="form-control" @bind-Value="_Model.NumericCode"/>
                <ValidationMessage For="@(() => _Model.NumericCode)" />
            </div>
            <div class="form-group">
                <span class="oi oi-star"></span>
                <label for="Ruolo">Ruolo</label>
                    <div class="form-control">
                        <InputSelect class="dropdown-item" @bind-Value="_Model.Role">
                            <option disabled selected>-- Scegliere ruolo --</option>
                            @foreach (var role in Enum.GetValues(typeof(Roles))) {
                                if ((Roles)role != Roles.ACCOUNT_MANAGER) {
                                    <option value="@role">@role</option>
                                }
                            }
                        </InputSelect>
                    </div>
                    <ValidationMessage For="@(() => _Model.Role)" />
            </div>
            <div class="form-group">
                <span class="oi oi-euro"></span>
                <label for="Tariffa oraria">Tariffa oraria</label>
                <InputNumber Step="0.01" class="form-control" @bind-Value="_Model.CurrentHourlyRate"/>
                <ValidationMessage For="@(() => _Model.CurrentHourlyRate)" />
                <div>
                    <div style="padding-right: 15px; display: inline-block;">
                        <label>Da
                            <InputDate class="form-control" @bind-Value="_Model.StartDateHourlyRate"/>
                        </label>
                    </div>
                    <ValidationMessage For="(() => _Model.StartDateHourlyRate)"/>
                    <label>A 
                        <InputDate class="form-control" @bind-Value="_Model.FinishDateHourlyRate"/>
                    </label>
                    <ValidationMessage For="(() => _Model.FinishDateHourlyRate)"/>
                </div>
            </div>
            <div class="form-group">
                <div style="margin: 0 auto; margin: 10px 5px;">
                    <span class="oi oi-key"></span>
                    <label for="Password">Password</label>
                    <InputText Type="@_TypeField" class="form-control" @bind-Value="_Model.Password"/>
                    <InputCheckbox style="float:left; margin-top: 5px;" @bind-Value="@_IsCheckboxClicked" @onclick="SwitchShowPassword"/>
                    <span style="margin: 10px 5px;">Vedi password</span>
                    <div style="margin: 20px;">
                        <span class="strong">
                            <p>Deve comprendere almeno: </p>
                            <p>[8 - 16] - Lunghezza caratteri</p>
                            <p>[A-Z] - Una lettera maiuscola.</p>
                            <p>[a-z] - Una lettera minuscola.</p>
                            <p>[0-9] - Un numero</p>
                        </span>
                    </div>
                </div>
                <ValidationMessage For="@(() => _Model.Password)" />
            </div>
            <div class="modal-footer" style="justify-content: center; padding: 10px 0; width: 100%;">
                <button type="button" class="btn btn-primary" @onclick="@(() => OnClickModalCancel())">
                    <i class="bi bi-arrow-left"></i>
                    Torna indietro
                </button>
            </div>
        </EditForm>
        </div>
        </div>
    </div>
</div>